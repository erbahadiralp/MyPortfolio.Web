@model MyPortfolio.Web.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>Admin Login</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/Templates/dark/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/Templates/dark/css/feather.css">
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="~/Templates/dark/css/daterangepicker.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/Templates/dark/css/app-light.css" id="lightTheme" disabled>
    <link rel="stylesheet" href="~/Templates/dark/css/app-dark.css" id="darkTheme">
</head>
<body class="dark ">
    <div class="wrapper vh-100">
        <div class="row align-items-center h-100">
            <form class="col-lg-3 col-md-4 col-10 mx-auto text-center" asp-controller="Account" asp-action="Login" method="post">
                <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="#">
                    <svg version="1.1" id="logo" class="navbar-brand-img brand-md" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
                    <g>
                    <polygon class="st0" points="78,105 15,105 24,87 87,87      " />
                    <polygon class="st0" points="96,69 33,69 42,51 105,51       " />
                    <polygon class="st0" points="78,33 15,33 24,15 87,15        " />
              </g>
            </svg>
                </a>
                <h1 class="h6 mb-3">Admin Girişi</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="sr-only"></label>
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Kullanıcı Adınız" required="" autofocus="">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Şifreniz" required="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label>
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
            </form>
        </div>
    </div>
    <script src="~/Templates/dark/js/jquery.min.js"></script>
    <script src="~/Templates/dark/js/popper.min.js"></script>
    <script src="~/Templates/dark/js/moment.min.js"></script>
    <script src="~/Templates/dark/js/bootstrap.min.js"></script>
    <script src="~/Templates/dark/js/simplebar.min.js"></script>
    <script src='~/Templates/dark/js/daterangepicker.js'></script>
    <script src='~/Templates/dark/js/jquery.stickOnScroll.js'></script>
    <script src="~/Templates/dark/js/tinycolor-min.js"></script>
    <script src="~/Templates/dark/js/config.js"></script>
    <script src="~/Templates/dark/js/apps.js"></script>
</body>
</html> 