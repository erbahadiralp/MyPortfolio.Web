@model IEnumerable<MyPortfolio.Web.Models.Entities.Education>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="timeline">
    @foreach (var education in Model)
{
    <div class="timeline-item blue">
        <div class="timeline-header">
                <h3 class="timeline-title">@education.Department</h3>
            <span class="timeline-date">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                    @education.DateRange
            </span>
        </div>
            <p class="timeline-company">@education.School</p>
        <p class="timeline-description">
                @education.Description
        </p>
    </div>
}
</div>

