@model List<MyPortfolio.Web.Models.Entities.Skill>

<h2 class="section-title">Skills</h2>
<div class="skills-grid">
    @foreach (var group in Model.GroupBy(y => y.Category))
    {
        <div class="skill-item">
            <div class="skill-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    @switch (group.Key)
                    {
                        case "Programming Languages":
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                            break;
                        case "Frameworks & Libraries":
                            <polyline points="16 18 22 12 16 6"></polyline>
                            <polyline points="8 6 2 12 8 18"></polyline>
                            break;
                        case "Databases":
                            <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                            <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                            <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                            break;
                        case "Tools & Platforms":
                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.7-3.7a1 1 0 0 0-1.4-1.4l-1.6 1.6a1 1 0 0 0-1.4 0l-3.7-3.7a1 1 0 0 0-1.4 1.4l1.6 1.6z"></path>
                            <path d="M2.5 11.5A2.5 2.5 0 0 1 5 9h1a2.5 2.5 0 0 1 2.5 2.5v1A2.5 2.5 0 0 1 6 15H5a2.5 2.5 0 0 1-2.5-2.5v-1z"></path>
                            <path d="M12.5 2.5A2.5 2.5 0 0 1 15 5v1a2.5 2.5 0 0 1-2.5 2.5h-1A2.5 2.5 0 0 1 9 6V5a2.5 2.5 0 0 1 2.5-2.5h1z"></path>
                            <path d="M21.5 12.5a2.5 2.5 0 0 1-2.5 2.5h-1a2.5 2.5 0 0 1-2.5-2.5v-1a2.5 2.5 0 0 1 2.5-2.5h1a2.5 2.5 0 0 1 2.5 2.5v1z"></path>
                            break;
                        default:
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                            break;
                    }
                </svg>
            </div>
            <h3 class="skill-title">@group.Key</h3>
            <ul class="skill-list">
                @foreach (var item in group)
                {
                    <li>@item.Name</li>
                }
            </ul>
        </div>
    }
</div>
